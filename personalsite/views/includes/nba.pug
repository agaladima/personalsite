#nba.both-forms
  .nba-box
    h2.lower-bold NBA Search
    p.description-nba.forma Pull any current NBA player's stats when you search for their name below.
    br
    form.forma.form(method='get' action='')
      span
        input.srch-name.first(type='text', name='firstname', placeholder='First Name')
        input.srch-name.last(type='text', name='lastname', placeholder='Last Name')
        br
        button.btn-srch Search
    .stats
      table.player-info
        tr
          th Name
          th Birthdate
          th Height
          th Weight
          th Jersey
          th Position
          th Team
        td
      table.player-stats
        tr
          th Points
          th Assists
          th Rebounds
          th PIE
        td
      button.srch Search Again
  .nbax
    h2.lower-bold NBA Search
    p.description-nba Pull any current NBA player's stats when you search for their name below.
    br
    .formb.form(action='')
      span
        input(type='text', name='fname', placeholder='First Name')
        input(type='text', name='lname', placeholder='Last Name')
        br
        input.btn-srch